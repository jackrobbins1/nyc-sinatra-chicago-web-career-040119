<h2>Edit Figure</h2>

<div style="margin-bottom: 50px;">
  <a class="button" href="/figures">Landmarks</a>
  <a class="button" href="/">Home</a>
</div>


<form action="/figures/<%= @figure.id %>" method="post">
   <input type="hidden" name="_method" value="PATCH" />

  Name
  <input type="text" name="figure[name]" value="<%=@figure.name%>">

  <div>
    Titles
  </div>
  <% @titles.each do |title| %>
    <div>
       <input type="checkbox" id="<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"
       <% if @figure.title_ids.include?(title.id) %>checked<% end %>
       >
       <label for="<%= title.id %>"><%= title.name %></label>
    </div>
  <% end %>

  Create New Title:
  <input type="text" name="title[name]">
  <!-- <input type="text" name="figure[title][]"> -->

  Landmarks
  <% @landmarks.each do |landmark| %>
    <div>
       <input type="checkbox" id="<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"
       <% if @figure.landmark_ids.include?(landmark.id) %>checked<% end %>
       >
       <label for="<%= landmark.id %>"><%= landmark.name %></label>
    </div>
  <% end %>

  Create New Landmark:
  Name
  <input type="text" name="landmark[name]">
  Year Completed
  <input type="text" name="landmark[year_completed]">

  <input type="submit" value="Create New Figure">
</form>
